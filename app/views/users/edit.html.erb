<h1>プロフィールの編集</h1>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        
<%= form_for(@user) do |f| %>

<%= render 'shared/error_messages', object: f.object %>

<%= f.label :profile %>
<%= f.text_field :profile, class: 'form-control' %>

<%= f.submit "Edit profile", class: "btn btn-large btn-primary" %>

    
<% end %>        
        